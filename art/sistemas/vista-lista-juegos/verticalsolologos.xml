<customView name="VERICAL solo logos" inherits="grid" tinyScreen="false" displayName="${carouselViewName}">

<imagegrid name="gamegrid">
<pos>-0.014 0.046</pos>
<size>0.30 0.930</size>
<padding>0.08 0 0.08 0</padding>
<scrollDirection>vertical</scrollDirection>
<autoLayout>1 5</autoLayout>
